---
import ExternalLink from './ExternalLink.astro'
---

<nav>
  <ul>
    <li>
      <ExternalLink href="www.linkedin.com/in/jhanviloria/">
        <img src="/icons/linkedin.svg" alt="LinkedIn" width="28" height="28" />
      </ExternalLink>
    </li>
    <li>
      <ExternalLink href="github.com/jhanca-vm">
        <img src="/icons/github.svg" alt="GitHub" width="28" height="28" />
      </ExternalLink>
    </li>
    <li>
      <ExternalLink href="twitter.com/jhanca_vm">
        <img src="/icons/twitter.svg" alt="Twitter" width="28" height="28" />
      </ExternalLink>
    </li>
  </ul>
</nav>

<style lang="scss">
  nav {
    margin-block: 2.4rem;
  }

  ul {
    column-gap: 1.2rem;
    display: flex;
    list-style: none;

    @media (min-width: 640px) {
      column-gap: 1.6rem;
    }

    @media (min-width: 640px) and (max-width: 767px) {
      justify-content: center;
    }
  }

  img:not(:hover) {
    opacity: 0.72;
  }
</style>
